# Surviving The Worldâ„¢ - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# NEON DATABASE (PostgreSQL)
# ===========================================
# Get your connection string from: https://console.neon.tech
# Format: postgresql://user:password@host/database?sslmode=require
NEON_DATABASE_URL=postgresql://username:password@ep-xxx-xxx-xxx.us-east-2.aws.neon.tech/surviving_the_world?sslmode=require

# ===========================================
# GAME CONFIGURATION
# ===========================================
NODE_ENV=development
GAME_VERSION=0.1.0
DEBUG_MODE=true

# ===========================================
# TELEMETRY & ANALYTICS
# ===========================================
TELEMETRY_ENABLED=true
TELEMETRY_ENDPOINT=

# ===========================================
# AUTHENTICATION (Future)
# ===========================================
JWT_SECRET=your-secret-key-here
SESSION_TIMEOUT=3600

# ===========================================
# CLOUD STORAGE (Future)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=surviving-the-world-saves
